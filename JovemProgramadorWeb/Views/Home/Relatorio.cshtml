@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}

@if (TempData["MsgOk"] != null)
{
    <div class="alert-success">
        @TempData["MsgOk"]
    </div>
}

@model List<RelatorioViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Matricula</th>
            <th scope="col">Turma</th>
            <th scope="col">DataInicio</th>
            <th scope="col">DataFim</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (RelatorioViewModel relatorioViewModel in Model)
            {
                <tr>
                    <td>@relatorioViewModel.Aluno.Nome</td>
                    <td>@relatorioViewModel.Aluno.Matricula</td>
                    <td>@relatorioViewModel.Turma.Nome</td>
                    <td>@relatorioViewModel.Turma.DataIni</td>
                    <td>@relatorioViewModel.Turma.DataFim</td>                   
                    
                </tr>
            }

        }

    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="Index"> Voltar</a>
</div>